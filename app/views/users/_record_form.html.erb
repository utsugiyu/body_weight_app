<div class="col-6 offset-3" >
  <%= form_for(@record, url: "/users/#{@user.id}?duration=#{params[:duration]}") do |f| %>

    <%= hidden_field_tag :duration, params[:duration] %>


    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group record-form">
      <%= f.number_field :weight, placeholder: "Input weight...", class: "form-control", step: 0.01  %>
    </div>

    <%= f.submit "Save" %>
  <% end %>
</div>
