   <li><a class="btn btn-outline-primary btn-block <%= "active" if params[:duration] != "week" && params[:duration] != "month" && params[:duration] != "all" %>" href= <%= "/users/#{@user.id}?duration=3days#{"&page=#{params[:page]}" if params[:page] != nil }" %> role="button">3days</a></li>
