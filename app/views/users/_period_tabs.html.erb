   <li><a class="btn btn-outline-primary btn-block <%= "active" if params[:duration] == "month" %>"  href= <%= "/users/#{@user.id}?duration=month#{"&page=#{params[:page]}" if params[:page] != nil }" %> role="button">Month</a></li>
   <li><a class="btn btn-outline-primary btn-block <%= "active" if params[:duration] == "all" %>"  href= <%= "/users/#{@user.id}?duration=all#{"&page=#{params[:page]}" if params[:page] != nil }" %> role="button">All</a></li>
</ul>
